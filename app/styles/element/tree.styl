.el- {
  &tree {
    &__empty-block {
      position: relative
      min-height: 60px
      text-align: center
      width: 100%
      height: 100%
    }

    &__empty-text {
      position: absolute
      left: 50%
      top: 50%
      transform: translate(-50%, -50%)
      color: saturation(lightness($color-primary, 44%), 16%)
    }
  }

  &tree-node {
    white-space: nowrap

    &__content {
      cursor: pointer
      padding: $gap-xsmall 0
      color: $color-muted
      transition: $color-transition

      & > .el-checkbox {
        margin-right: 8px
      }
      & > .el-checkbox {
        vertical-align: middle
      }
      &:hover {
        color: $font-color-base
      }
    }

    &__expand-icon {
      display: none
    }

    &__label {
      font-size: 14px
      vertical-align: middle
      display: inline-block
    }

    &__loading-icon {
      display: inline-block
      vertical-align: middle
      margin-right: 4px
      font-size: 14px
      color: $color-light-silver
    }

    & > .el-tree-node__children {
      overflow: hidden
      background-color: transparent
      margin-bottom: $gap-xsmall
    }

    &.is-expanded > .el-tree-node__children {
      display: block
    }
  }
}

.el-tree--highlight-current .el-tree-node.is-current > .el-tree-node__content {
  background-color: tint($color-primary, 92%)
}
