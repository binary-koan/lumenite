.el- {
  &input {
    position: relative
    font-size: $input-font-size
    display: block

    &__inner {
      appearance: none
      display: block
      width: 100%
      padding: $input-padding
      border: $input-border
      border-radius: $input-border-radius
      background-color: $input-fill
      background-image: none
      font: inherit
      font-weight: $font-weight-medium
      line-height: normal
      color: $input-color
      transition: $border-transition
      outline: none

      &::placeholder,
      &::-webkit-placeholder {
        color: $input-placeholder-color
      }

      &:hover {
        border-color: $input-hover-border-color
      }

      &:focus {
        outline: none
        border-color: $input-focus-border-color
      }
    }

    &__icon {
      absolute: top right
      width: $input-icon-width
      height: 100%
      text-align: center
      color: $input-icon-color
      transition: all .3s

      &:after {
        content: ''
        height: 100%
        width: 0
        display: inline-block
        vertical-align: middle
      }

      & + .el-input__inner {
        padding-right: 35px
      }

      &.is-clickable {
        &:hover {
          cursor: pointer
          color: $input-hover-border-color

          & + .el-input__inner {
            border-color: $input-hover-border-color
          }
        }
      }
    }

    &.is-active {
      .el-input__inner {
        outline: none
        border-color: $input-focus-border-color
      }
    }

    &.is-disabled {
      .el-input__inner {
        background-color: $disabled-fill-base
        border-color: $disabled-border-base
        color: $disabled-color-base
        cursor: not-allowed

        &::placeholder {
          color: $input-disabled-placeholder-color
        }
      }
    }
    &--large {
      font-size: $input-large-font-size

      & .el-input__inner {
        height: $input-large-height
      }
    }
    &--small {
      font-size: $input-small-font-size

      & .el-input__inner {
        height: $input-small-height
      }
    }
    &--mini {
      font-size: $input-mini-font-size

      & .el-input__inner {
        height: $input-mini-height
      }
    }
  }

  &input-group {
    flex-layout: row
    align-items: center

    &__append, &__prepend {
      padding: $input-padding
      border: $input-border
      border-radius: $input-border-radius
      background-color: $input-fill
      line-height: normal
      color: $input-border-color
      white-space: nowrap

      & .el-select,
      & .el-button {
        display: block
        margin: -10px
      }

      & .el-button,
      & .el-select .el-input__inner,
      & .el-select:hover .el-input__inner {
        border-color: transparent
        background-color: transparent
        color: inherit
        border-top: 0
        border-bottom: 0
      }
      & .el-button,
      & .el-input {
        font-size: inherit
      }
    }
    &__prepend {
      border-right: 0
      border-top-right-radius: 0
      border-bottom-right-radius: 0

      + .el-input__inner {
        border-left: none
      }
    }
    &__append {
      border-left: 0
      border-top-left-radius: 0
      border-bottom-left-radius: 0
    }

    &--prepend {
      .el-input__inner {
        border-top-left-radius: 0
        border-bottom-left-radius: 0
      }
    }
    &--append {
      .el-input__inner {
        border-top-right-radius: 0
        border-bottom-right-radius: 0
      }
    }
  }

  &textarea {
    display: inline-block
    width: 100%
    vertical-align: bottom

    &__inner {
      display: block
      resize: vertical
      padding: 5px 7px
      line-height: 1.5
      box-sizing: border-box
      width: 100%
      font-size: $font-size-base
      color: $input-color
      background-color: $color-white
      background-image: none
      border: $input-border
      border-radius: 4px
      transition: $border-transition-base

      &::placeholder {
        color: $input-placeholder-color
      }

      &:hover {
        border-color: $input-hover-border-color
      }

      &:focus {
        outline: none
        border-color: $input-focus-border-color
      }
    }

    &.is-disabled {
      .el-textarea__inner {
        background-color: $disabled-fill-base
        border-color: $disabled-border-base
        color: $disabled-color-base
        cursor: not-allowed

        &::placeholder {
          color: $input-disabled-placeholder-color
        }
      }
    }
  }
}
