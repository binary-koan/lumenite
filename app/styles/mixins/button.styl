button-variant($color, $background-color, $border-color) {
  color: $color
  background-color: $background-color
  border: $button-border
  border-color: $border-color
  transition: $all-transition

  &:hover,
  &:focus {
    background: lighten($background-color, $button-hover-tint-percent)
    border-color: lighten($border-color, $button-hover-tint-percent)
    color: $color
  }

  &:active {
    background: darken($background-color, $button-active-shade-percent)
    border-color: darken($border-color, $button-active-shade-percent)
    color: $color
    outline: none
  }

  &.is-active {
    background: darken($background-color, $button-active-shade-percent)
    border-color: darken($border-color, $button-active-shade-percent)
    color: $color
  }

  &.is-plain {
    background: $button-default-fill
    border-color: $border-color
    color: $button-default-color

    &:hover,
    &:focus {
      background: $color-white
      border-color: $border-color
      color: $background-color
    }

    &:active {
      background: $color-white
      border-color: darken($border-color, $button-active-shade-percent)
      color: darken($background-color, $button-active-shade-percent)
      outline: none
    }
  }
}

button-size($padding-vertical, $padding-horizontal, $font-size, $border-radius) {
  padding: $padding-vertical $padding-horizontal
  font-size: $font-size
  border-radius: $border-radius
}
