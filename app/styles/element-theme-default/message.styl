
.el- {

  &message {
    box-shadow: $message-shadow
    min-width: $message-min-width
    padding: $message-padding
    box-sizing: border-box
    border-radius: $border-radius-small
    position: fixed
    left: 50%
    top: 20px
    transform: translateX(-50%)
    background-color: $color-white
    transition: opacity 0.3s, transform .4s
    overflow: hidden

    &__group {
      margin-left: 38px
      position: relative
      height: 20px

      &.is-with-icon {
        margin-left: 0
      }

      & p {
        font-size: $font-size-base
        line-height: 20px
        margin: 0 34px 0 0
        white-space: nowrap
        color: $message-content-color
        text-align: justify
        display: inline-block
        vertical-align: middle
      }
    }

    &__img {
      size: 40px
      position: absolute
      left: 0
      top: 0
    }

    &__icon {
      vertical-align: middle
      margin-right: 8px
    }

    &__closeBtn {
      absolute: top 3px right 0
      cursor: pointer
      color: $message-close-color
      font-size: $font-size-base

      &:hover {
        color: $message-close-hover-color
      }
    }

    & .el-icon-circle-check {
      color: $message-success-color
    }

    & .el-icon-circle-cross {
      color: $message-danger-color
    }

    & .el-icon-information {
      color: $message-info-color
    }

    & .el-icon-warning {
      color: $message-warning-color
    }
  }

  .el-message-fade-enter,
  .el-message-fade-leave-active {
    opacity: 0
    transform: translate(-50%, -100%)
  }
}
