
/*@import "./core/dropdown";*/

.element- {

  &cascader {
    display: inline-block
    position: relative

    &__dropdown {
      background-color: $cascader-menu-fill
      border: $cascader-menu-border
      border-radius: $cascader-menu-radius
      box-shadow: $cascader-menu-submenu-shadow
      margin-top: 5px
      max-height: $cascader-height
      position: absolute
      white-space: nowrap
      z-index: 10
    }

    &__wrap {
      overflow: hidden
    }

    &__menu {
      border: 0
      box-shadow: none
      display: inline-block
      margin: 0
      position: relative
      vertical-align: top

      &::before {
        border-left: $cascader-menu-border
        content: " "
        height: $cascader-height
        left: 0
        position: absolute
      }
    }
  }
}
