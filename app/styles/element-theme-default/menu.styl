
menu-item() {
  height: 56px
  line-height: 56px
  font-size: 14px
  color: $menu-item-color
  padding: 0 20px
  cursor: pointer
  position: relative
  transition: border-color .3s, background-color .3s, color .3s
  box-sizing: border-box
  white-space: nowrap
}

.el- {
  &menu {
    border-radius: 2px
    list-style: none
    position: relative
    margin: 0
    padding-left: 0
    background-color: $menu-item-fill
    clearfix()
    
    & li {
      list-style: none
    }

    &--dark {
      background-color: $dark-menu-item-fill

      & .el-menu-item,
      & .el-submenu__title {
        color: $color-extra-light-silver

        &:hover {
          background-color: $color-extra-light-black
        }
      }
      
      & .el-submenu .el-menu {
        background-color: $color-base-black

        & .el-menu-item:hover {
          background-color: $color-extra-light-black
        }
      }
    }
    &--horizontal {
      & .el-menu-item {
        float: left
        height: 60px
        line-height: 60px
        margin: 0
        cursor: pointer
        position: relative
        box-sizing: border-box
        border-bottom: 5px solid transparent

        a,
        a:hover {
          color: inherit
        }

        &:hover {
          background-color: $menu-item-hover-fill
        }
      }
      & .el-submenu {
        float: left
        position: relative

        > .el-menu {
          position: absolute
          top: 65px
          left: 0
          border:1px solid $color-base-gray
          padding: 5px 0
          background-color: $color-white
          z-index: 100
          min-width: 100%
          box-shadow: 0px 2px 4px 0px rgba(0,0,0,0.12), 0px 0px 6px 0px rgba(0,0,0,0.04)
        }

        & .el-submenu__title {
          height: 60px
          line-height: 60px
          border-bottom: 5px solid transparent
        }

        & .el-menu-item {
          background-color: $color-white
          float: none
          height: 36px
          line-height: 36px
          padding: 0 10px
        }

        & .el-submenu__icon-arrow {
          position: static
          vertical-align: middle
          margin-left: 5px
          color: $color-light-silver
          margin-top: -3px
        }
      }
      & .el-menu-item:hover,
      & .el-submenu__title:hover {
        background-color: $menu-item-fill
      }
      & > .el-menu-item:hover,
      & > .el-submenu:hover .el-submenu__title,
      & > .el-submenu.is-active .el-submenu__title {
        border-bottom: 5px solid $color-primary
      }

      &.el-menu--dark {
        & .el-menu-item:hover,
        & .el-submenu__title:hover {
          background-color: $dark-menu-item-fill
        }

        & .el-submenu {
          .el-menu-item,
          .el-submenu-title {
            color: $color-extra-light-black

            &:hover {
              background-color: $color-base-gray
            }
          }
          .el-menu-item.is-active {
            color: $color-primary
          }
        }
      }
    }
  }
  &menu-item {
    menu-item()
    
    & [class^="el-icon-"] {
      vertical-align: baseline
      margin-right: 10px
    }
    &:first-child {
      margin-left: 0
    }
    &:last-child {
      margin-right: 0
    }
    &:hover {
      background-color: $color-base-gray
    }
    &.is-active {
      color: $color-primary
    }
  }
  
  &submenu {
    &__title {
      position: relative
      menu-item()

      &:hover {
        background-color: $color-base-gray
      }
    }
    & .el-menu {
      background-color: $color-light-gray
    }
    & .el-menu-item {
      height: 50px
      line-height: 50px
      padding: 0 45px

      &:hover {
        background-color: $color-base-gray
      }
    }
    &__icon-arrow {
      position: absolute
      top: 50%
      right: 20px
      margin-top: -7px
      transition: transform .3s
      font-size: 12px
    }
    &.is-active {
      .el-submenu__title {
        border-bottom-color: $color-primary
      }
    }
    &.is-opened {
      > .el-submenu__title .el-submenu__icon-arrow {
        transform: rotateZ(180deg)
      }
    }
    [class^="el-icon-"] {
      vertical-align: baseline
      margin-right: 10px
    }
  }

  &menu-item-group {
    > ul {
      padding: 0
    }
    &__title {
      padding-top: 15px
      line-height: normal
      font-size: 14px
      padding-left: 20px
      color: $color-light-silver
    }
  }
}
