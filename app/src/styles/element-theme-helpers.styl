rect($width, $height, $color) {
  width: $width
  height: $height
  background-color: $color
}

circle($size, $color) {
  width: $size
  height: $size
  border-radius: 50%
  background-color: $color
}

// See https://github.com/tj/nib
-pos(type, args)
  i = 0
  position: unquote(type)
  for j in (1..4)
    if length(args) > i
      {args[i]}: args[i + 1] is a 'unit' ? args[i += 1] : 0
    i += 1

fixed()
  -pos('fixed', arguments)

absolute()
  -pos('absolute', arguments)

relative()
  -pos('relative', arguments)
